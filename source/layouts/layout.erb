<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, user-scalable=no">
    
    <!-- Open Graph -->
    <!-- https://developers.facebook.com/docs/plugins/checklist -->
    <meta property="og:site_name" content="Bullshit Sheriff" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:url" content="http://bullshitsheriff.com" />
    <meta property="og:title" content="Bullshit Sheriff" />
    <meta property="og:description" content="Together we can make social media an honest place. If you see posted bullshit, tag the scene of the crime with #BullshitSheriff." />
    <meta property="og:image" content="http://bullshitsheriff.com/images/bullshit-sheriff-facebook-share.jpg" />
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>
    
    <%= stylesheet_link_tag "normalize", "all" %>
    <%= partial "pattern-backgrounds" %>


  </head>
  
  <!-- Nerd ascii art
  NERD ALERT! If you want to download all these files as repeatable PNG tiles, go to this link: www.blah.com
  Nerd ascii art -->
  
  <body class="<%= page_classes %>">
    <script src="//use.typekit.net/sxr8xhm.js"></script>
    <script>try{Typekit.load();}catch(e){}</script>
    <!-- Facebook SDK -->
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&appId=86061903389&version=v2.3";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
    <!-- END Facebook SDK -->
    
    <!-- Pinterest JS -->
    <script type="text/javascript" async defer src="//assets.pinterest.com/js/pinit.js"></script>
		<!-- Pinterest JS -->
    
    
    <div class="page-wrap">
      <%= partial "masthead" %>
      <%= yield %>
      <%= partial "footer" %>
    </div> 
    
	<script>
	  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
	  ga('create', 'UA-61284851-1', 'auto');
	  ga('send', 'pageview');
	</script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script> 
    <%= javascript_include_tag  "all" %>
  </body>
</html>