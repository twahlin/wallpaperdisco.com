<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, user-scalable=no">
    
    <!-- Open Graph -->
    <!-- https://developers.facebook.com/docs/plugins/checklist -->
    <meta property="og:site_name" content="Wallpaper Disco" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:url" content="http://wallpaperdisco.com/" />
    <meta property="og:title" content="Wallpaper Disco" />
    <meta property="og:description" content="Dance up your desktop and devices. Created by Tom Wahlin" />
    <meta property="og:image" content="http://wallpaperdisco.com/images/site-assets/wallpaper-disco-facebook-share.jpg" />
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Wallpaper Disco" %></title>
    
    <%= stylesheet_link_tag "normalize", "all" %>
    <%= partial "pattern-backgrounds" %>


  </head>
  
  <body class="<%= page_classes %>">
    <script src="//use.typekit.net/sxr8xhm.js"></script>
    <script>try{Typekit.load();}catch(e){}</script>
    <!-- Facebook SDK -->
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&appId=86061903389&version=v2.3";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
    <!-- END Facebook SDK -->
    
    <!-- Pinterest JS -->
    <script type="text/javascript" async defer src="//assets.pinterest.com/js/pinit.js"></script>
		<!-- Pinterest JS -->
    
    
    <div class="page-wrap">
      <%= partial "masthead" %>
      <%= yield %>
      <%= partial "footer" %>
    </div> 
    
    
    <script>
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-62026612-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
    
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script> 
    <%= javascript_include_tag  "all" %>
  </body>
</html>