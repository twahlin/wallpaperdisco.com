<style type="text/css">

<% data.patterndata.patterns.each do |p| %>
  .<%= p['name'].downcase.strip.gsub(' ', '-').gsub(/[^\w-]/, '')%>{
		background-image: url("images/gifs/<%= p['imageSlug'] %>.gif"), url("images/pattern-tiles/<%= p['imageSlug'] %>-wallpaper-disco-tom-wahlin.png");
		background-position: center;
		background-repeat: no-repeat, repeat;
		background-attachment: fixed;
		background-size: 100px 100px, 175px 175px;
	}
<% end %>

@media
only screen and (                min-width: 768px) {
  <% data.patterndata.patterns.each do |p| %>
    .<%= p['name'].downcase.strip.gsub(' ', '-').gsub(/[^\w-]/, '')%>{
			background-size: 200px 200px, 350px 350px;
    }
  <% end %>
}

</style>